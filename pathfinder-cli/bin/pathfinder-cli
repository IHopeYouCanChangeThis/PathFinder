#!/usr/bin/env ruby

require 'optparse'
require 'methadone'
require 'git'
require 'net/http'
require 'pathfinder/cli.rb'

class App
  include Methadone::Main
  include Methadone::CLILogging
  include Pathfinder::Cli

  main do |github_project| # Add args you want: |like,so|
    TMP_DIR = '/tmp/pathfinder/'
    Utils.clean_directory! TMP_DIR

    clone_dir = Utils.clone_project(github_project, TMP_DIR)

    Utils.upload_all_from(github_project, clone_dir)

    # You can access CLI options via
    # the options Hash
  end

  # Declare command-line interface here

  # description "one line description of your app"
  #
  # Accept flags via:
  # on("--flag VAL","Some flag")
  # options[flag] will contain VAL
  #
  # Specify switches via:
  # on("--[no-]switch","Some switch")
  #
  # Or, just call OptionParser methods on opts
  #
  # Require an argument
  # arg :some_arg
  #
  # # Make an argument optional
  # arg :optional_arg, :optional

  version Pathfinder::Cli::VERSION

  use_log_level_option :toggle_debug_on_signal => 'USR1'

  go!
end
